{
	"name": "stardew-save-editor",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"dump": "tsx --no-warnings src/dump.ts",
		"lint": "biome lint ./src",
		"lint:fix": "biome lint ./src --write",
		"format": "prettier src && biome check ./src",
		"format:fix": "prettier src --write && biome check ./src --write"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@sveltejs/adapter-static": "^3.0.6",
		"@sveltejs/kit": "^2.7.3",
		"@total-typescript/ts-reset": "^0.5.1",
		"@types/node": "^18.19.59",
		"@types/wicg-file-system-access": "^2020.9.6",
		"fast-xml-parser": "^4.5.0",
		"idb": "^7.1.1",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"svelte": "^5.1.3",
		"svelte-check": "^4.0.0",
		"tslib": "^2.4.1",
		"tsx": "^4.19.1",
		"typescript": "^5.6.3",
		"vite": "^5.4.10"
	},
	"type": "module"
}